<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
<h3>name</h3>  
   <h3><%= user.name %></h3>  
<h3>introduction</h3>   
  <%= user.introduction %>
  <%= link_to  edit_user_path(user) do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>
  
  

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>