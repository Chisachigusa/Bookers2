        <tbody>
          <tr>
            <% if @book.user == current_user %>
              <th scope="row"><%= image_tag @book.user.get_profile_image(100,100) %><%= link_to @book.user.name, user_path(@book.user) %></th>
              <td><%= link_to(@book.title, book_path(@book), class:"text-blue") %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% else %>
              <th scope="row"><%= image_tag @book.user.get_profile_image(100,100) %><%= link_to @book.user.name, user_path(@book.user) %></th>
              <td><%= link_to(@book.title, book_path(@book), class:"text-blue") %></td>
              <td><%= @book.body %></td>
            <% end %>  
          </tr>
        </tbody>
      </table>
    </div>  
  </div>
</div>