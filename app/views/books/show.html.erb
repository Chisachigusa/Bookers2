<div class="container">
  <div class="row"> 
    <div class="col-md-3">
      <%= render 'template', user: @user, book: @book %>
    </div>  
    <div class="offset-md-1">
    </div>
    <div class="col-md-8">
    <h1>Book detail</h1>
    
      <table class="table">
  <!--<thead>-->
