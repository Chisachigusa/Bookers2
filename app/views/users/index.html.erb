<div class="container">
  <div class="row"> 
    <div class="col-md-3">
      <%= render 'books/template', user: @user, book: @book %>
    </div>  
      <div class="offset-md-1">
      </div>
      <div class="col-md-8">
        <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <th scope="row"><%= image_tag user.get_profile_image(100,100) %></th>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>  
  </div>  
</div>    
